{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Python package",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build then install with pip",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m build ; ${command:python.interpreterPath} -m pip install dist/minecode_mcp-0.1.1.tar.gz",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}